<div class="container">
    <h1>Waiters Available on {{day}}</h1>
    <p> <em>NOTE:</em> Click on a waiter's name to update their working day</p>
    <div class="dayspanel">
        <ul>
        {{#each waiters}}
            <a href="/waiters/{{username}}"><li>{{username}}</li></a> 
        {{/each}}
        {{#unless waiters}}
            <li>No waiter available</li>
        {{/unless}}
        </ul>
    </div>
</div>